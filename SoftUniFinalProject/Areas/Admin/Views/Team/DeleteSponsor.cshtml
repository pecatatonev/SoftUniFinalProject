@model SoftUniFinalProject.Core.Models.Team.SponsorServiceViewModel
@{
    ViewBag.Title = "Delete Sponsor";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <img class="card-img-fluid" src="@Model.ImageUrl" alt="Card image cap">
                <p class="mb-0"><strong>Creation Year:</strong> @Model.YearCreated</p>
                <p class="mb-0"><strong>Net Worth</strong> @Model.NetWorthInBillion Billion</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this event?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteSponsor" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-area="Admin" asp-action="AllSponsors" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>