@model SoftUniFinalProject.Core.Models.Team.AddTeamViewModel;
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6"> 
        <form method="post"> 
            <div class="form-group">
                <label asp-for="Name"></label> 
                <input asp-for="Name" class="form-control" placeholder="FootbalTeam Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname"></label> 
                <input asp-for="Nickname" class="form-control" placeholder="Nickname of the club">
                <span asp-validation-for="Nickname" class="small text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="ManagerName"></label> 
                <input asp-for="ManagerName" rows="4" class="form-control" placeholder="Manager Name">
                <span asp-validation-for="ManagerName" class="small text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="ImageUrl"></label> 
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here..." />
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="StadiumName"></label>
                <input asp-for="StadiumName" class="form-control" placeholder="Stadium Name">
                <span asp-validation-for="StadiumName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumCapacity"></label>
                <input asp-for="StadiumCapacity" class="form-control" placeholder="Stadium Capacity">
                <span asp-validation-for="StadiumCapacity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfCreation"></label>
                <input asp-for="YearOfCreation" class="form-control" placeholder="Creation Year of the club">
                <span asp-validation-for="YearOfCreation" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label>Sponsors</label>
                @foreach (var sponsor in Model.Sponsors)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedSponsors" value="@sponsor.Id" id="sponsor_@sponsor.Id">
                        <label class="form-check-label" for="sponsor_@sponsor.Id">
                            @sponsor.Name
                        </label>
                    </div>
                }
            </div>

            <div class="text-center"> 
                <input class="btn btn-primary mt-3" type="submit" value="Save" /> 
            </div> 
        </form> 
    </div> 
</div>